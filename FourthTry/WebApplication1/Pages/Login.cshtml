@page
@model ThirdTry.Pages.LoginModel
@{
}
<h1>Login</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login" asp-controller="Account">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="model.Email" class="control-label"></label>
                <input asp-for="model.Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="model.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="model.Password" class="control-label"></label>
                <input asp-for="model.Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="model.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}